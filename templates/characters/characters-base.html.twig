<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Characters{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../../templates/common-card-styles.css">
</head>
<body>

{% import 'characters/_characters_macros.html.twig' as R %}

{% set WoundPenalties = [0, -1, -2, -4] %}

<div class="container-fluid py-4">
    <div class="row row-cols-auto g-4">
    {% for card in cards %}

        {% if card.Character is not null %}
            {% set CharacterName = card.Character.Name %}
        {% else %}
            {% set CharacterName = card.Name %}
        {% endif %}

        <div class="col">
            <div class="card h-100 {% block card_class %}size-big{% endblock %}">
                <div class="card-body p-2 d-flex flex-column">
                    <div class="card-header-custom default d-flex align-items-center mb-2 p-2 border rounded">
                        <div class="me-auto">
                            <h5 class="card-title mb-0 fs-6">{{ CharacterName }}</h5>
                        </div>
                        <div class="text-center px-2">

                        </div>
                        <div class="ms-auto">
                            {% block header_right %}{% endblock %}
                        </div>
                    </div>

                    <div class="flex-grow-1">{% block card_body %}{% endblock %}</div>

                    <div class="card-footer-custom default d-flex align-items-center mt-auto pt-2 border-top">
                        <div class="me-auto">{% block footer_left %}{% endblock %}</div>
                        <div class="mx-auto">{% block footer_center %}{% endblock %}</div>
                        <div class="ms-auto">{% block footer_right %}{% endblock %}</div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>