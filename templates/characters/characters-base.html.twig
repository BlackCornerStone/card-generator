<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Characters{% endblock %}</title>
    <link rel="stylesheet" href="../../templates/common-card-styles.css">
</head>
<body>

{% import 'characters/_characters_macros.html.twig' as R %}

{% set WoundPenalties = [0, -1, -2, -4] %}

<div class="grid">
    {% for card in cards %}

        {% if card.Character is not null %}
            {% set CharacterName = card.Character.Name %}
        {% else %}
            {% set CharacterName = card.Name %}
        {% endif %}

        {% for WoundPenalty in WoundPenalties %}
            <div class="card {% block card_class %}size-big{% endblock %}">
                <div class="card-content">
                    <div class="card-header default">
                        <div class="slot-left">
                            <div class="card-title">{{ CharacterName }}</div>
                        </div>
                        <div class="slot-center">
                            {% for i in (0..WoundPenalty|abs)|filter(v => v > 0) %}
                                <span class="filled">ðŸ©¸</span>
                            {% endfor %}
                        </div>
                        <div class="slot-right">
                            {% block header_right %}{% endblock %}
                        </div>
                    </div>

                    <div class="card-body">{% block card_body %}{% endblock %}</div>

                    <div class="card-footer default">
                        <div class="slot-left">{% block footer_left %}{% endblock %}</div>
                        <div class="slot-center">{% block footer_center %}{% endblock %}</div>
                        <div class="slot-right">{% block footer_right %}{% endblock %}</div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>