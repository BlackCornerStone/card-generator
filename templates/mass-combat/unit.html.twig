<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mass Combat Units</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="../../templates/common-card-styles.css">
</head>
<body>

<div class="container-fluid py-4">
    <div class="row row-cols-auto g-4">
    {% for card in cards %}

        {% set npc = card.UnitSource %}
        {% set Essence = npc.Essence|default(0) %}
        {% set Attr = npc.Character.Attributes|default({}) %}
        {% set Abil = npc.Character.Abilities|default({}) %}

        {% set Str = Attr.Strength|default(0) %}
        {% set Dex = Attr.Dexterity|default(0) %}
        {% set Sta = Attr.Stamina|default(0) %}
        {% set Mel = Abil.Melee|default(0) %}
        {% set Dod = Abil.Dodge|default(0) %}

        {# Placeholder derivations until rulebook formulas are provided #}
        {% set BaseAttack = Dex + Mel + Essence %}
        {% set BaseDefense = ((Dex + Dod + Essence) / 2)|round(0, 'floor') %}
        {% set BaseSoak = Sta %}

        <div class="col">
            <div class="card h-100 size-big">
                <div class="card-body p-2 d-flex flex-column">
                    <div class="card-header-custom default d-flex align-items-center mb-2 p-2 border rounded">
                        <div class="me-auto">
                            <h5 class="card-title mb-0 fs-6">{{ card.Name }}</h5>
                        </div>
                        <div class="ms-auto d-flex gap-1">
                            {% if card.Unit.Size %}<span class="badge text-bg-primary">Size {{ card.Unit.Size }}</span>{% endif %}
                            {% if card.Unit.Drill %}<span class="badge text-bg-secondary">Drill {{ card.Unit.Drill }}</span>{% endif %}
                            {% if card.Unit.Might %}<span class="badge text-bg-info text-white">Might {{ card.Unit.Might }}</span>{% endif %}
                            {% if card.Unit.Morale %}<span class="badge text-bg-warning">Morale {{ card.Unit.Morale }}</span>{% endif %}
                        </div>
                    </div>

                    <div class="flex-grow-1">
                        <div class="row row-cols-2 g-2">
                            <div class="col">
                                <h6 class="border-bottom pb-1">Overview</h6>
                                <div class="small">
                                    <div class="d-flex justify-content-between">
                                        <strong>Leader:</strong>
                                        <span>
                                            {% if card.Leader is iterable %}
                                                {{ card.Leader.Name }}{% if card.Leader.Caste %} â€” {{ card.Leader.Caste }}{% endif %}
                                            {% else %}
                                                {{ card.Leader }}
                                            {% endif %}
                                        </span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <strong>Source:</strong>
                                        <span>
                                            {% if npc is iterable %}
                                                {{ npc.Name }}
                                            {% else %}
                                                {{ npc }}
                                            {% endif %}
                                        </span>
                                    </div>
                                    {% if card.Notes %}
                                    <div class="mt-1">
                                        <strong>Notes:</strong> {{ card.Notes }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="col">
                                <h6 class="border-bottom pb-1 text-truncate">Base Stats</h6>
                                <div class="small">
                                    <div class="d-flex justify-content-between">
                                        <strong>Attack:</strong> <span>{{ BaseAttack }}</span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <strong>Defense:</strong> <span>{{ BaseDefense }}</span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <strong>Soak:</strong> <span>{{ BaseSoak }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-2">

                        <div class="row row-cols-4 g-2">
                            <div class="col">
                                <h6 class="border-bottom pb-1 small">Skirmish</h6>
                                <div class="small x-small-stats">
                                    <div>Atk: {{ BaseAttack }}</div>
                                    <div>Def: {{ BaseDefense }}</div>
                                    <div>Sok: {{ BaseSoak }}</div>
                                </div>
                            </div>
                            <div class="col">
                                <h6 class="border-bottom pb-1 small">Close</h6>
                                <div class="small x-small-stats">
                                    <div>Atk: {{ BaseAttack }}</div>
                                    <div>Def: {{ BaseDefense }}</div>
                                    <div>Sok: {{ BaseSoak }}</div>
                                </div>
                            </div>
                            <div class="col">
                                <h6 class="border-bottom pb-1 small text-truncate">Form 3</h6>
                                <div class="small x-small-stats">
                                    <div>Atk: {{ BaseAttack }}</div>
                                    <div>Def: {{ BaseDefense }}</div>
                                    <div>Sok: {{ BaseSoak }}</div>
                                </div>
                            </div>
                            <div class="col">
                                <h6 class="border-bottom pb-1 small text-truncate">Form 4</h6>
                                <div class="small x-small-stats">
                                    <div>Atk: {{ BaseAttack }}</div>
                                    <div>Def: {{ BaseDefense }}</div>
                                    <div>Sok: {{ BaseSoak }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
</div>

</body>
</html>
