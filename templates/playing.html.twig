<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Cards</title>
    {% macro suit_symbol(suit) %}
        {%- if suit|lower == 'hearts' -%}<span class="suit-icon suit-hearts">♥</span>
        {%- elseif suit|lower == 'diamonds' -%}<span class="suit-icon suit-diamonds">♦</span>
        {%- elseif suit|lower == 'clubs' -%}<span class="suit-icon suit-clubs">♣</span>
        {%- elseif suit|lower == 'spades' -%}<span class="suit-icon suit-spades">♠</span>
        {%- endif -%}
    {% endmacro %}
    <style>
        body { 
            margin: 0; 
            padding: 20px; 
            background-color: #f5f5f5; 
            font-family: Arial, sans-serif; 
        }
        
        .suit-icon {
            font-family: "Segoe UI Symbol", "Symbola", "DejaVu Sans", "Arial Unicode MS", Arial, sans-serif;
            font-weight: normal;
            font-style: normal;
        }
        
        .grid { 
            display: block;
            width: 100%; 
        }
        
        .card { 
            display: inline-block;
            width: 2in;
            height: 3in;
            background-color: white; 
            border: 2px solid #333; 
            border-radius: 8px; 
            padding: 12px; 
            position: relative; 
            margin: 8px;
            vertical-align: top;
            page-break-inside: avoid;
            break-inside: avoid;
        }
        
        .absolute { 
            position: absolute; 
        }
        
        .top-2 { 
            top: 8px; 
        }
        
        .left-2 { 
            left: 8px; 
        }
        
        .bottom-2 { 
            bottom: 8px; 
        }
        
        .right-2 { 
            right: 8px; 
        }
        
        .text-sm { 
            font-size: 12px; 
        }
        
        .font-bold { 
            font-weight: bold; 
        }
        
        .text-red-600 { 
            color: #dc2626; 
        }
        
        .text-black { 
            color: #000000; 
        }
        
        .text-lg { 
            font-size: 18px; 
            line-height: 1; 
        }
        
        .text-6xl { 
            font-size: 72px; 
            line-height: 1; 
        }
        
        .leading-none { 
            line-height: 1; 
        }
        
        .rotate-180 { 
            transform: rotate(180deg); 
        }
        
        .center-symbol { 
            position: absolute; 
            top: 50%; 
            left: 50%; 
            transform: translate(-50%, -50%); 
        }
        
    </style>
</head>
<body>
    <div class="grid">
        {% for card in cards %}
        <div class="card">
            <!-- Top left corner -->
            <div class="absolute top-2 left-2 text-sm font-bold {{ card.color == 'red' ? 'text-red-600' : 'text-black' }}">
                <div>{{ card.rank }}</div>
                <div class="text-lg">{{ _self.suit_symbol(card.suit) }}</div>
            </div>
            
            <!-- Center suit symbol -->
            <div class="center-symbol">
                <div class="text-6xl {{ card.color == 'red' ? 'text-red-600' : 'text-black' }}">{{ _self.suit_symbol(card.suit) }}</div>
            </div>
            
            <!-- Bottom right corner (rotated) -->
            <div class="absolute bottom-2 right-2 text-sm font-bold {{ card.color == 'red' ? 'text-red-600' : 'text-black' }} rotate-180">
                <div>{{ card.rank }}</div>
                <div class="text-lg">{{ _self.suit_symbol(card.suit) }}</div>
            </div>
        </div>
        {% endfor %}
    </div>
</body>
</html>