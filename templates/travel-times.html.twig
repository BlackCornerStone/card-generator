{% extends "card-base.html.twig" %}

{% block title %}Travel Time Cards{% endblock %}

{% block card_title %}{{ card.Mode }}{% endblock %}

{% block card_badges %}{% endblock %}

{% block card_classes %}size-medium{% endblock %}

{% block card_body %}
<div class="card-body">
    <div class="stats-grid">
        <div class="stat-group">
            <h3>Distance by time unit [miles]</h3>
            <table class="speed-table">
                <tr>
                    <th>Speed</th>
                    <th>Hourly</th>
                    <th>Daily</th>
                    <th>Weekly</th>
                    <th>Monthly</th>
                </tr>
                {% for i in range(1, 10) %}
                    <tr>
                        <td>{{ i }}/8</td>
                        <td>{{ card.Hourly is defined ? (card.Hourly * i / 8)|round(0) : '' }}</td>
                        <td>{{ card.Daily is defined ? (card.Daily * i / 8)|round(0) : '' }}</td>
                        <td>{{ card.Weekly is defined ? (card.Weekly * i / 8)|round(0) : '' }}</td>
                        <td>{{ card.Monthly is defined ? (card.Monthly * i / 8)|round(0) : '' }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
{% endblock %}
