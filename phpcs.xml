<?xml version="1.0"?>
<ruleset name="CardGenerator Coding Standard">
    <description>Base coding standard for this project.</description>

    <file>src</file>

    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>templates/*</exclude-pattern>
    <exclude-pattern>output/*</exclude-pattern>

    <rule ref="PSR12"/>

    <config name="php_version" value="80300"/>

    <arg name="colors"/>
    <arg name="parallel" value="4"/>

    <!-- Some pragmatic relaxations -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="140"/>
            <property name="absoluteLineLimit" value="0"/>
            <property name="ignoreComments" value="true"/>
        </properties>
    </rule>
</ruleset>
